<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <b><%= @book.errors.count %> errors prohibited this book from being saved:</b>
    <ul>
        <% @book.errors.full_messages.each do |messages| %>
            <li><%= messages %></li>
        <% end %>
    </ul>
<% end %>

<div>
    <%= form_for @book do |book| %>
        <div>
            <p>Title</p>
            <%= book.text_field :title %>
        </div>
        <div>
            <p>Body</p>
            <%= book.text_area :body %>
        </div>
        <div>
            <%= book.submit "Update Book" %>
        </div>
    <% end %>
    <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
