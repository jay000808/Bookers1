<div class="main_contents">
    <% if flash[:notice] %>
        <div class="flash">
            <%= flash[:notice] %>
        </div>
    <% end %>

    <h1>Books</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colapn="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete,  data: {confirm: "Are you sure?"} %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <h2>New book</h2>
    <%= form_for(@book) do |book| %>
        <% if @book.errors.any? %>
        <b><%= @book.errors.count %> errors prohibited this book from being saved:</b>
        <ul>
            <% @book.errors.full_messages.each do |messages| %>
                <li><%= messages %></li>
            <% end %>
        </ul>
        <% end %>
        <div>
            <p>Title</p>
            <%= book.text_field :title %>
        </div>
        <div>
            <p>Body</p>
            <%= book.text_area :body %>
        </div>
        <%= book.submit "Create Book" %>
    <% end %>
</div>

